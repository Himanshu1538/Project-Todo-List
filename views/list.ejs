
<%- include("header"); -%>

<body>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">
    <% for (var i = 0; i < newListItems.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItems[i] %></p>
    </div>
    <% } %>

    <form class="box" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <!-- Setting the name and value attribute of button in a way to use them in the logic in app.js -->
      <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
  </div>
</body>

<%- include("footer"); -%>
